{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                                "*.c",
                                "../MLX42/libmlx42.a",
                                "../lib/libglfw3.a",
                                "../libft/libft.a",
                                "-framework", 
                                "Cocoa",
                                " -framework",
                                 "OpenGL",
                                " -framework" ,
                                "IOKit"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
